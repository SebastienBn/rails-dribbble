

<section class="admin">

  <p class="new-post button action"><%= link_to 'Nouveau Post', new_post_path %></p>
  <p class="button action"> <%= link_to 'Retour', root_path %></p>

  <h2>Posts</h2>

  <table>
    <thead>
      <tr>
        <th>Utilisateur</th>
        <th>Titre</th>
        <th>Image</th>
        <th>Description</th>
        <th>Catégorie</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.user_id %></td>
          <td><%= post.title %></td>
          <td><img src="<%= post.image %>"></td>
          <td><%= post.desciprion %></td>
          <td><%= post.category_id %></td>
          <td><%= link_to 'Ouvrir', post %></td>
          <td><%= link_to 'Modifier', edit_post_path(post) %></td>
          <td><%= link_to 'Supprimer', post, method: :delete, data: { confirm: 'Êtes vous sûr?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>



  <br>


</section