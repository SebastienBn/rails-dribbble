<p id="notice"><%= notice %></p>

<h1>Catégories</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Ouvrir', category %></td>
        <td><%= link_to 'Modifier', edit_category_path(category) %></td>
        <td><%= link_to 'Supprimer', category, method: :delete, data: { confirm: 'Êtes-vous sûr ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouvelle Catégorie', new_category_path %>
